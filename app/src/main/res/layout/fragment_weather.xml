<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">

    <RelativeLayout
        android:id="@+id/relative01"
        android:layout_margin="10dp"
        android:background="@drawable/bg_weather_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/weather_above_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/data_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time"
                    android:text="2016/1/19"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/week_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周一"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_above="@+id/temperature_TextView"
                    android:layout_toEndOf="@+id/data_TextView" />

                <TextView
                    android:id="@+id/temperature_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-NN/NN"
                    android:textSize="33dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="13dp"
                    android:layout_below="@+id/data_TextView"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/temperature_TextView"
                    android:layout_toEndOf="@+id/temperature_TextView"
                    android:id="@+id/textView" />
                <ImageView
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/temperature_TextView"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/weather_qing"/>

                <TextView
                    android:id="@+id/address_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="郑州"
                    android:textSize="29dp"
                    android:textColor="@color/yellow"
                    android:layout_below="@+id/weather"
                    android:layout_alignStart="@+id/temperature_TextView" />
                <ImageView
                    android:id="@+id/location_ImageView"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_change_city"

                    android:layout_alignBottom="@+id/address_TextView"
                    android:layout_alignStart="@+id/weather" />

                <TextView
                    android:id="@+id/backlog_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="适宜洗车"
                    android:textSize="31dp"
                    android:layout_below="@+id/address_TextView"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/shidu_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/backlog_TextView"
                    android:layout_alignParentRight="true"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    android:text="湿度 N%"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_below="@+id/weather_above_relativelayout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/Tuesday"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/Tuesday_TextView_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:text="周二"/>
                <ImageView
                    android:id="@+id/Tuesday_ImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/weather_qing"/>
                <TextView
                    android:id="@+id/Tuesday_TextView_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="N℃"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Wednesday"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/Tuesday"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/Wednesday_TextView_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:text="周三"/>
                <ImageView
                    android:id="@+id/Wednesday_ImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/weather_qing"/>
                <TextView
                    android:id="@+id/Wednesday_TextView_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="N℃"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Thursday"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/Wednesday"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/Thursday_TextView_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:text="周四"/>
                <ImageView
                    android:id="@+id/Thursday_ImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/weather_qing"/>
                <TextView
                    android:id="@+id/Thursday_TextView_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="N℃"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Friday"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/Thursday"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/Friday_TextView_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:text="周五"/>
                <ImageView
                    android:id="@+id/Friday_ImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/weather_qing"/>
                <TextView
                    android:id="@+id/Friday_TextView_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="N℃"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Saturday"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/Friday"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/Saturday_TextView_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:text="周六"/>
                <ImageView
                    android:id="@+id/Saturday_ImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/weather_qing"/>
                <TextView
                    android:id="@+id/Saturday_TextView_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="N℃"/>

            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>

</RelativeLayout>